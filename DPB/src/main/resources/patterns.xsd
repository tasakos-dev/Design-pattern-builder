																</xs:element>
															</xs:sequence>
															<xs:attribute name="id" use="required" />
														</xs:complexType>
													</xs:element>
												</xs:sequence>
												<xs:attribute name="id" use="required" />
											</xs:complexType>
										</xs:element>
										<xs:element name="class" maxOccurs="unbounded">
											<xs:complexType mixed="true">
												<xs:sequence minOccurs="0">
													<xs:element name="field" minOccurs="0">
														<xs:complexType>
															<xs:sequence>
																<xs:element name="type"
																	type="xs:string" />
															</xs:sequence>
															<xs:attribute name="id" use="required" />
															<xs:attribute name="isStatic"
																type="xs:boolean" />
														</xs:complexType>
													</xs:element>
													<xs:element name="method" minOccurs="0">
